<div class="span5">
  <a href= "/home/index">
    <%= image_tag "booker/cover.png", :size => "350", :style => 'display:block;margin:auto' %>
  </a>
</div>
<div class="span6">
  <%= form_tag booker_create_path do %>
    <table class="table">
      <tr>
        <td>訂位姓名</td>
        <td><%= text_field_tag :tag_name, params[:tag_name], :required => true, :class => 'input-block-level' %></td>
      </tr>
      <tr>
        <td>您的E-Mail</td>
        <td><%= email_field_tag :tag_email, params[:tag_email], :required => true, :class => 'input-block-level' %></td>
      </tr>
      <tr>
        <td>手機號碼</td>
        <td><%= phone_field_tag :tag_phone, params[:tag_phone], :required => true, :class => 'input-block-level' %></td>
      </tr>
      <tr>
        <td>設定密碼</td>
        <td><%= password_field_tag :tag_password, nil, :required => true, :class => 'input-block-level' %></td>
      </tr>
      <tr>
        <td colspan="2">
          <label><%= check_box_tag :tag_i_agree, 1, false, {required: true} %> 我同意<a href="ry" target="_blank" class="base_green">訂吧 條款</a></label>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= submit_tag "註冊帳號" , { :class => 'btn btn-large btn-block' } %></td>
      </tr>
    </table>
  <% end %>
</div>

<script>
  $('form').submit(function(){
    return validate(this);
  });
</script>

