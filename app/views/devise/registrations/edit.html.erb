<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <div>
      <%= f.label :email, "E-Mail" %>
      <%= f.email_field :email, :autofocus => false, :disabled=>"disabled" %>
    </div>

    <div><%= f.label :password, "新密碼" %> <i>(如果沒有要修改密碼請留空)</i><br />
      <%= f.password_field :password, :autocomplete => "off" %>
    </div>

    <div><%= f.label :password_confirmation, "確認新密碼" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.label :name, "姓名" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :phone, "手機" %>
      <%= f.phone_field :phone %>
    </div>

    <div><%= f.label :current_password,"輸入目前密碼驗證" %>
      <%= f.password_field :current_password %>
    </div>

    <div><%= f.submit "確認修改" %></div>
<% end %>
<script>
  $('form').submit(function(){
    return validate(this);
  });
</script>





