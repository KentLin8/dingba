<input type="text" name="" id="show_day" class="datepicker input-small" value="<%= @select_date %>"><br>
<span style="color: rgb(127,23,0)"><%= @select_date %></span> 的訂位資料為：
<br>
<% if @zones_books.length == 0 %>
  目前無人訂位
<% end %>
<% @zones_books.each do |z| %>
  <table class="table daily_info">
    <tr>
      <th colspan="8"><div class="mark1"></div>&nbsp;<%= z.name %></th>
    </tr>
    <tr>
      <td>時間</td>
      <td>人數</td>
      <td>訂位人大名</td>
      <td>訂位人電話</td>
      <td>訂位人EMail</td>
      <td>備註</td>
      <td></td>
      <td></td>
    </tr>

    <% z.books.each do |b| %>
    <tr data-id="<%= b.id %>">
      <td><%= b.booking_time.strftime('%Y/%m/%d %H:%M') %></td>
      <td><%= b.num_of_people %></td>
      <td><%= b.name %></td>
      <td><%= b.phone %></td>
      <td><a href="mailto:<%= b.email %>"><%= b.email %></a></td>
      <td><%= b.remark %></td>
      <td><a href="" class="btn modify">修改</a></td>
      <td><a href="" class="btn delete">刪除</a></td>
    </tr>
    <% end %>
    <tr><td colspan="7"></td></tr>
  </table>
<% end %>