
<%= form_for :booking ,:url => "modify_booking_save" do |f| %>
    <%= f.hidden_field :id %>
    <table class="table">
      <tr>
        <td>用餐日期</td>
        <td><%= f.text_field :booking_time, :class => "booking_date datepicker" %></td>
        <td></td>
      </tr>
       <tr>
         <td>用餐時間</td>
         <td>
           <select name="" id=""></select>
         </td>
         <td></td>
       </tr>
      <tr>
        <td>用餐人數</td>
        <td><%= f.text_field :num_of_people %></td>
        <td></td>
      </tr>
      <tr>
        <td>訂位者大名</td>
        <td><%= f.text_field :name %></td>
        <td></td>
      </tr>
      <tr>
        <td>訂位者電話</td>
        <td><%= f.phone_field :phone %></td>
        <td></td>
      </tr>
      <tr>
        <td>訂位E-mail</td>
        <td><%= f.email_field :email %></td>
        <td></td>
      </tr>
      <tr>
        <td>備註</td>
        <td><%= f.text_area :remark %></td>
        <td><input type="submit" value="確認修改" class="btn btn-primary"></td>
      </tr>
    </table>
<% end %>

    <div style="border-top: 1px dotted #DDDDDD; margin: 10px 0"></div>

<%= form_for :booking ,:url => "cancel_booking" do |f| %>
    <%= f.hidden_field :id %>
    <div class="info">訂位取消</div>
    <table class="table">
      <tr>
        <td><%= f.radio_button :status, "2", checked: @booking.status == '2' %> 同伴無法配合</td>
        <td><%= f.radio_button :status, "3", checked: @booking.status == '3' %> 餐廳當天座位不夠</td>
      </tr>
      <tr>
        <td><%= f.radio_button :status, "4", checked: @booking.status == '4' %> 選擇了其他餐廳</td>
        <td><%= f.radio_button :status, "5", checked: @booking.status == '5' %> 餐廳臨時公休</td>
      </tr>
      <tr>
        <td><%= f.radio_button :status, "6", checked: @booking.status == '6' %> 聚餐延期</td>
        <td></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= f.radio_button :status, "7", checked: @booking.status == '7' %> 其他
          <%= f.text_field :cancel_note, :placeholder => '請輸入' %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><input type="submit" value="訂位取消" class="btn btn-primary"></td>
      </tr>
    </table>
<% end %>

<script>
    $(function() {

        $(".booking_date").datepicker({
            dateFormat: 'yy-mm-dd'
        }).val(getTodaysDate());

    });

    function getTodaysDate () {
        var t = new Date;
        var year = t.getFullYear();

        var day = t.getDate()
        if (day < 10) {
            day = '0' + day;
        }

        var month = t.getMonth() + 1;
        if ( month < 10){
            month = '0' + month;
        }
        return (year + '-' + month + '-' + day);
    }
</script>