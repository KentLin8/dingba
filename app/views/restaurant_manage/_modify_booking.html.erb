<tr>
  <td colspan="8">
    <div id="wrapper">
      <%= form_for :booking ,:url => "restaurant_manage/modify_booking_save", :html => {:id => 'modify_booking'} do |f| %>
        <%= f.hidden_field :id %>
        <table class="table">
          <tr>
            <td>用餐日期</td>
            <td><%= f.text_field :booking_time, :class => "booking_date datepicker", required: true %></td>
          </tr>
           <tr>
             <td>用餐時間</td>
             <td>
               <select name="" id="" required="required">
                 <option value="padding">padding</option>
               </select>
             </td>
           </tr>
          <tr>
            <td>用餐人數</td>
            <td><%= f.text_field :num_of_people, required: true %></td>
          </tr>
          <tr>
            <td>訂位者大名</td>
            <td><%= f.text_field :name, required: true %></td>
          </tr>
          <tr>
            <td>訂位者電話</td>
            <td><%= f.phone_field :phone, required: true %></td>
          </tr>
          <tr>
            <td>訂位E-mail</td>
            <td><%= f.email_field :email, required: true %></td>
          </tr>
          <tr>
            <td>備註</td>
            <td><%= f.text_area :remark %></td>
          </tr>
          <tr>
            <td><input type="submit" value="確認修改" class="btn btn-primary"></td>
            <td></td>
          </tr>
        </table>
      <% end %>
    </div>
  </td>
</tr>
<script>
$(".booking_date").datepicker({
  dateFormat: 'yy-mm-dd'
});
</script>