<html>
<head>
  <style type="text/css">
      #customers
      {
          font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
          width:800px;
          border-collapse:collapse;
      }

      #customers td, #customers th
      {
          font-size:1em;
          border:1px solid #98bf21;
          padding:3px 7px 2px 7px;
      }

      #customers th
      {
          font-size:1.1em;
          text-align:left;
          padding-top:5px;
          padding-bottom:4px;
          background-color:#A7C942;
          color:#ffffff;
      }

      #customers tr.alt td
      {
          color:#000000;
          background-color:#EAF2D3;
      }
  </style>


</head>

<body>
<%= link_to '<<Go Home>>', action: 'adm_index', method: :get  %>    List all restaurants ..
    <table id="customers">

      <tr >
        <th>ID</th>
        <th>Name</th>
        <th>ADM Email</th>
        <th>Invited Code</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>

      <% @restaurant_list.each do |rest| %>
      <tr >
        <td><%= rest.id %></td>
        <td>
          <a href='<%=  APP_CONFIG['domain'] + rest.res_url.to_s  %>'><%= rest.name %></a>
          (<a href='<%=  APP_CONFIG['domain_hack'] + rest.res_url.to_s  %>'> IN </a> )
        </td>
        <td> <%= rest.supply_email %> </td>
        <td> <%= rest.code %> </td>
        <td> <%= rest.created_at.to_date %> </td>
        <td> <%= rest.updated_at.to_date %> </td>
      </tr>
      <% end %>
    </table>

</body>
</html>